<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/bootstrap.css">
    <title>留言板</title>
</head>
<body>

<!--页头-->
<div class="page-header">
    <h1 class="text-center"> 留言板 </h1>
</div>

<div class="container">
    <form class="form-horizontal" action="/addMessage" method="post">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">姓名：</label>
            <div class="col-sm-10">
                <input type="text" name="name" class="form-control" id="inputEmail3" placeholder="name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">内容：</label>
            <div class="col-sm-10">
                <textarea name="content" class="form-control" cols="30" rows="3"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">发表</button>
            </div>
        </div>
    </form>
    <nav aria-label="..." class="col-sm-offset-1 col-sm-11">
        <ul class="pagination">
        <% for ( var i = 0; i < pageNum; i++){ %>
            <li><a href="/page=<%= i %>"><%= i+1 %></a></li>

        <% } %>
        </ul>
    </nav>

    <% for ( var i = 0; i < messages.length; i++){ %>
    <ul class="list-group col-sm-offset-1 col-sm-11">
        <li class="list-group-item">【姓名】<%= messages[i].name %> </li>
        <li class="list-group-item">【内容】<%= messages[i].content %></li>
        <li class="list-group-item">【时间】<%= messages[i].datetime %></li>
        <li class="list-group-item text-right"><a href="/del<%= messages[i]._id %>">删除</a></li>
    </ul>

    <% } %>

</div>

</body>
</html>